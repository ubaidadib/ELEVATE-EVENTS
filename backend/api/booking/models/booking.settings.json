{
  "kind": "collectionType",
  "collectionName": "bookings",
  "info": {
    "name": "Booking",
    "description": "User reservations"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "date": {
      "type": "date"
    },
    "time": {
      "type": "string"
    },
    "table": {
      "type": "string"
    },
    "guestName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": ["pending", "paid", "cancelled"]
    },
    "qrCode": {
      "type": "string"
    }
  }
}
